generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
}

// --- ENUMS ---

enum Currency {
  USD
  INR
}

enum TaskStatus {
  PENDING
  COMPLETED
  DROPPED
}

enum Priority {
  HIGH
  MEDIUM
  LOW
}

enum ProjectType {
  EARNING
  SPENDING
}

enum PricingType {
  HOURLY
  FIXED
  PER_TASK
  MONTHLY
}

// --- MODELS ---

model User {
  id            String       @id @default(cuid())
  name          String?
  email         String       @unique
  createdAt     DateTime     @default(now())
  
  tasks         Task[]
  projects      Project[]
  dailyStats    DailyStats[]
  dailyLogs     DailyLog[]
}

model Project {
  id            String       @id @default(cuid())
  userId        String
  name          String
  description   String?
  clientName    String?

  type          ProjectType  @default(EARNING)
  
  startDate     DateTime?
  endDate       DateTime?
  
  pricingType   PricingType @default(FIXED)
  currency      Currency    @default(USD)
  hourlyRate    Float?       
  fixedBudget   Float?   
  costPerTask   Float?    
  estimatedHours Int?        
  
  notes         String?      @db.Text
  clientFeedback String?     @db.Text
  
  status        String       @default("ACTIVE") 

  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  user          User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks         Task[]

  payments      Payment[]

  @@index([userId])
}

model Payment {
  id            String    @id @default(cuid())
  projectId     String
  
  amount        Float
  date          DateTime  @default(now()) // When received/paid
  notes         String?   // e.g., "January Retainer" or "Milestone 1"
  
  createdAt     DateTime  @default(now())
  
  project       Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
}

model DailyLog {
  id            String    @id @default(cuid())
  userId        String
  
  // NEW: Editable Title
  title         String?   

  date          DateTime  @default(now()) 
  status        String    @default("OPEN") 
  
  // Cached stats 
  totalTasks    Int       @default(0)
  completedTasks Int      @default(0)
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  tasks         Task[]    

  @@index([userId])
}

model Task {
  id            String    @id @default(cuid())
  
  dailyLogId    String?   
  projectId     String?   
  userId        String
  
  description   String
  status        TaskStatus @default(PENDING) 
  priority      Priority  @default(MEDIUM)
  
  category      String    @default("General") 
  
  estimatedTime Int       
  actualTime    Int?      
  
  startTime     DateTime? 
  endTime       DateTime? 
  
  isRunning     Boolean   @default(false)
  elapsedSeconds Int      @default(0)
  lastStartTime DateTime? 

  actualCost    Float?    @default(0)
  
  notes         String?   @db.Text 
  workDate      DateTime  @default(now()) 

  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  project       Project?  @relation(fields: [projectId], references: [id], onDelete: SetNull)
  dailyLog      DailyLog? @relation(fields: [dailyLogId], references: [id], onDelete: Cascade)

  @@index([dailyLogId])
  @@index([userId])
}

model DailyStats {
  id              String   @id @default(cuid())
  userId          String
  date            DateTime @default(now())
  totalTasks      Int
  completedTasks  Int
  totalEstimated  Int
  totalActual     Int
  efficiencyScore Float    
  aiSummary       String?  @db.Text
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  @@unique([userId, date])
}